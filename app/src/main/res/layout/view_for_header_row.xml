<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txtNotificationHeader"
        android:layout_width="wrap_content"
        android:text="PPE - No Harness"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_marginTop="5dp"
         android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="Zone :"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"/>

         <TextView
             android:id="@+id/txtNotificationSubZone"
             android:layout_width="match_parent"
             android:textSize="12sp"
             android:layout_marginLeft="5dp"
             android:text="Mask -1"
             android:layout_height="wrap_content"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNotificationDate"
                android:layout_width="wrap_content"
                android:text="12-29-21"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text=" | "
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/txtNotificationTime"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="10.59 pm"
                android:layout_height="wrap_content"/>

        </LinearLayout>

</LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgArrowRight"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_arrrow_right_round"
            android:layout_height="30dp"/>

        <ImageButton
            android:id="@+id/imgArrowDown"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_arrrow_down_round"
            android:layout_height="30dp"/>

    </FrameLayout>


</LinearLayout>